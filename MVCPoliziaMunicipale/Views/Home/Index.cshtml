
@{
    ViewBag.Title = "Index";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
        <div class="col-10 col-sm-8 col-lg-6">
            <img src="~/Content/ImgProgetto/poliziaMunicipale.png" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="700" height="500" loading="lazy">
        </div>
        <div class="col-lg-6">
            <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">Portale Online Polizia Municipale</h1>
            <p class="lead">
                La Polizia Municipale svolge attività molto articolate
                nell’obiettivo di garantire, al nostro Comune ed ai
                suoi abitanti, sicurezza e tutela dei principi della
                civile convivenza; un obiettivo perseguito con
                impegno costante cercando di fornire risposte alle
                situazioni di disagio quotidiano, attraverso la
                comprensione delle problematiche, l’individuazione
                delle soluzioni più soddisfacenti e l’intervento più
                efficace.
            </p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                @Html.ActionLink("Registra Trasgressore","Create", "Trasgressori", "", new { @class = "btn btn-outline-primary" })
                @Html.ActionLink("Registra Verbale", "Create", "Verbale", "", new {@class= "btn btn-outline-secondary"})
            </div>
        </div>
    </div>
</div>

